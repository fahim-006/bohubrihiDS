def max_pairwise_product(a):
    index1 = 0
    index2 = 0
    k1 = 0
    x1 = len(a)
    for k in range(1, len(a)):
        if a[k] > a[index1]:
            index1 = k
    while k1 < x1:
        k1 = k1 + 1
        if k1 == len(a):
            break
        if a[k1] > a[index2] and k1 != index1:
            index2 = k1
    return a[index2]*a[index1]


n = int(input())
x = input().split()
a = []

for i in range(len(x)):
    a.append(int(x[i]))

print(max_pairwise_product(a))